{
  "name": "@ckpack/parameter",
  "version": "2.6.1",
  "description": "JSON validator for Node.js and browser",
  "main": "cjs/index.js",
  "module": "es/index.js",
  "types": "es/index.d.ts",
  "keywords": [
    "parameter",
    "verify"
  ],
  "repository": "https://github.com/ckpack/parameter",
  "scripts": {
    "test": "jest",
    "build": "npm run build:es && npm run build:cjs && npm run build:docs",
    "build:es": "tsc",
    "prebuild:es": "rm -rf ./es/*",
    "postbuild:es": "npm run build:es:min && npm run build:cjs:min && npm run build:iife:min",
    "build:es:min": "esbuild ./es/index.js --bundle --minify --format=esm --outfile=./dist/index.es.js",
    "build:cjs:min": "esbuild ./es/index.js --bundle --minify --format=cjs --outfile=./dist/index.cjs.js",
    "build:iife:min": "esbuild ./es/index.js --bundle --minify --format=iife --global-name=Parameter --outfile=./dist/index.iife.js",
    "build:cjs": "tsc -p tsconfig-cjs.json",
    "prebuild:cjs": "rm -rf ./cjs/*",
    "build:docs": "typedoc ./src/index.ts",
    "prebuild:docs": "rm -rf ./docs/*",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "release": "standard-version",
    "prepare": "husky install"
  },
  "files": [
    "es",
    "cjs",
    "dist"
  ],
  "author": "chenkai",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^13.2.0",
    "@commitlint/config-conventional": "^13.2.0",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^7.0.2",
    "jest": "^27.2.3",
    "ts-jest": "^27.0.5",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.4",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "esbuild": "^0.13.3",
    "lint-staged": "^11.1.2",
    "standard-version": "^9.3.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint . --ext .js,.jsx,.ts,.tsx --fix"
    ]
  }
}
